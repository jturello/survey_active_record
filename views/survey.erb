<h1><%= @survey.title() %></h1>

<h1>Update <%=@survey.title() %> </h1>
<form action="/surveys/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="new_title">New title:</label>
  <input id="new_title" name="new_title" type="text" placeholder="<%= @survey.title() %>">
  <button type="submit">Update</button>
</form>

<h1>Delete This Survey</h1>
<form action="/surveys/<%= @survey.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete</button>
</form>

<h1>Add a new question</h1>
<form action="/surveys/<%= @survey.id() %>/question" method="post">
  <input id="survey_id" name="survey_id" type="hidden" value="<%= @survey.id() %>">
  <label for="question_name">Question Name:</label>
  <input id="question_name" name="question_name" type="text">
  <button type="submit">Add Question</button>
</form>

<h1>Questions in this survey</h1>
<% if @survey.questions().any?() %>
  <ul>
    <% @survey.questions().each() do |question| %>
      <li><a href="/questions/<%= question.id() %>"><%= question.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>This survey has no questions.</p>
<% end %>

